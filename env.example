# Конфигурация базы данных MySQL
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=dmd_cottage_sheets
MYSQL_USER=dmduser
MYSQL_PASSWORD=dmdpassword

# Режим работы приложения (development/production)
NODE_ENV=development

# Секретный ключ для JWT 
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# URL для API и WebSocket - в продакшене используются относительные пути
# Development URLs:
REACT_APP_API_URL=https://server.name.ru/api
REACT_APP_WS_URL=wss://server.name.ru
FRONTEND_URL=https://server.name.ru

# Production URLs (если нужны кастомные):
# REACT_APP_API_URL=/api
# FRONTEND_URL=https://nginx.raznaradki-from-gs.orb.local

# Команды для контейнеров в режиме разработки
BACKEND_COMMAND=npm run dev
FRONTEND_COMMAND=npm start

# Порты (используются по умолчанию):
# MySQL: 3306
# Backend: 3001  
# Frontend: 3000
# Nginx: 80, 443
# Adminer: 8080 

# Данные администратора (создается автоматически при запуске)
ADMIN_EMAIL=admin@dmdcottage.com
ADMIN_PASSWORD=admin123456
ADMIN_FIRST_NAME=Администратор
ADMIN_LAST_NAME=Системы

# SSL сертификаты для HTTPS (в продакшене)
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem 